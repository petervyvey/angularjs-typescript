{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": false,
		"lib": [
			"es2015",
			"es2017",
			"dom"
		],
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@services/*": ["src/services/*"],
			"@components/*": ["src/components/*"],
			"@lib/*": ["src/lib/*"],
			"@ngrx/*": ["src/lib/ngrx/*"],
			"@store/*": ["src/store/*"]
		}
	}
}