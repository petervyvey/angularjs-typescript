{
  "name": "angularjs-typescript",
  "version": "0.0.1",
  "description": "AngularJS + TypeScript PoC",
  "main": "application.js",
  "scripts": {
    "postinstall": "npm run build-step:lint",
    "start": "webpack-dev-server --open --port 8880",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean-step:dist": "node lib/rimraf-standalone.js dist",
    "clean-step:node_modules": "node lib/rimraf-standalone.js node_modules",
    "build-step:dev": "webpack",
    "build-step:prd": "webpack -p",
    "build-step:lint": "tslint ./src/**/*.ts",
    "pipeline:clean": "npm run pipeline:clean:dev",
    "pipeline:clean:dev": "npm run clean-step:dist",
    "pipeline:clean:prd": "npm run clean-step:dist && npm run clean-step:node_modules",
    "pipeline:build": "npm run pipeline:build:dev",
    "pipeline:build:dev": "npm run pipeline:clean:dev && npm run build-step:lint && npm run build-step:dev",
    "pipeline:build:prd": "npm run pipeline:clean:prd && npm install && npm run build-step:lint && npm run build-step:prd"
  },
  "author": "Peter VYVEY (peter.vyvey@gmail.com)",
  "license": "MIT",
  "dependencies": {
    "@uirouter/angularjs": "^1.0.12",
    "angular": "^1.6.8",
    "angular-route": "^1.6.8",
    "angular-ui-bootstrap": "^2.5.0",
    "angular1-async-filter": "^1.1.0",
    "bootstrap": "^3.3.7",
    "core-js": "^2.5.3",
    "jquery": "^3.2.1",
    "rxjs": "^5.4.2"
  },
  "devDependencies": {
    "@types/angular": "^1.6.39",
    "@types/angular-route": "^1.3.4",
    "@types/core-js": "^0.9.43",
    "@types/jquery": "^3.2.6",
    "@types/lodash": "^4.14.67",
    "awesome-typescript-loader": "^3.2.1",
    "css-loader": "^0.28.4",
    "file-loader": "^0.11.2",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.29.0",
    "image-webpack-loader": "^3.3.1",
    "ngtemplate-loader": "^2.0.1",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "ts-loader": "^2.2.2",
    "tslint": "^5.8.0",
    "typescript": "^2.6.0",
    "url-loader": "^0.5.9",
    "webpack": "^3.10.0",
    "webpack-dashboard": "^0.4.0",
    "webpack-dev-server": "^2.5.0"
  }
}
